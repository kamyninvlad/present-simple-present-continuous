html
    width 100%
    height 100%
body
    font-family 'Metropolis', sans-serif
    background-color #dfe6e9
    width 100%
    height 100%
    //font styles
    .bold, .italic
        font-weight 700
    .italic
        font-style italic
    #wrapper
        width 100%
        height 100%
        display flex
        align-items center
    table
        margin 0 auto
        //rounded corners
        tr:first-child th:first-child
            border-top-left-radius 10px
        tr:first-child th:last-child
            border-top-right-radius 10px
        tr:last-child td:first-child
            border-bottom-left-radius 10px
        tr:last-child td:last-child
            border-bottom-right-radius 10px
        td
            border-right 1px dashed gray
            border-collapse collapse
            padding 20px
        td:last-child
            border-right none
        tr.header>th
            height 40px
            font-size 16px
            vertical-align middle
            text-align center
            font-weight 800
            background-color white
        tr.cards>td
            text-align center
            padding-top 0px!important
            background-color white
            vertical-align middle
            div.card
                height 250px
                width 226px
                display flex
                flex-direction column
                align-items center
                justify-content center
                border 2px solid black
                border-radius 10px
                font-weight 800
                transition background-color 1s
                .card-title, .card-icon
                    display flex
                    align-items center
                    justify-content center
                    flex-direction column
                .card-title
                    height 45px
                .card-icon
                    height 150px
                    font-family  Apple Color Emoji
                    font-size 100px
            div.card:hover
                background-color #dfe6e9
        tr.list>td
            background-color #2a2a2a
            p.uses
                background-color white
                height auto
                width 186px
                border 2px solid white
                text-wrap wrap
                border-radius 10px
                margin-bottom 15px
                padding 10px 20px
                transition background-color 1s, color 1s, border-color 1s
            p.uses:hover
                background-color #636e72
                border 2px solid #b2bec3
                color white
        p.exception
                height auto
                width 186px
                text-wrap wrap
                border 2px solid #ffca00!important
                border-radius 10px
                margin-bottom 15px
                padding 10px 20px
                background repeating-linear-gradient(-55deg,#ffca00,#ffca00 15px,#ffd94b 15px,#ffd94b 30px)
                color black
                .exception-title
                    font-weight 800
         td:nth-child(2)
            padding-right 0px
            border-right none
        tr.list>td>p:last-child
            margin-bottom 0px
        